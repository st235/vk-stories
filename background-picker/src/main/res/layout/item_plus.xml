<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/plus_background"
        android:contentDescription="@string/imagePlaceholder"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_toolbar_new" />

    <sasd97.java_blog.xyz.libs_selectionview.SelectionView
        android:id="@+id/selectionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
</FrameLayout>